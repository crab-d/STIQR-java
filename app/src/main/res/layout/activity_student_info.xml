<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".staff.StudentInfo">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">

            <Button
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BACK"
                android:background="@color/yellow"
                android:textColor="#777"
                android:textStyle="bold"
                android:id="@+id/btn_back"/>

        <TextView
            android:fontFamily="@font/p_med"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:text="STUDENT PROFILE"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/white"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f1f1f1"
            android:orientation="vertical"
            android:elevation="4sp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp">

            <TextView
                android:fontFamily="@font/p_med"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NAME: JOHN PAUL BARCINILA"
                android:textStyle="bold"
                android:id="@+id/tv_name"/>

            <TextView
                android:fontFamily="@font/p_med"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="STUDENT NUMBER: 0200320320"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold"
                android:id="@+id/tv_studentNumber"/>
        </LinearLayout>



            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TOTAL CS"
                        android:textAlignment="center"
                        android:background="@color/primary"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/p_med"/>
                    <TextView
                        android:background="#f1f1f1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="25dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/p_med"
                        android:id="@+id/tv_csTotal"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PENDING"
                        android:textAlignment="center"
                        android:background="@color/primary"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/p_med"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="25dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/p_med"
                        android:id="@+id/tv_csPending"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ON GOING"
                        android:textAlignment="center"
                        android:background="@color/primary"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/p_med"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="25dp"
                        android:text="0"
                        android:background="#f1f1f1"

                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/p_med"
                        android:id="@+id/tv_csOnGoing"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="COMPLETE"
                        android:textAlignment="center"
                        android:background="@color/primary"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:fontFamily="@font/p_med"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="25dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:fontFamily="@font/p_med"
                        android:id="@+id/tv_csComplete"/>

                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RECORD"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginTop="15dp"
                android:textSize="20dp"
                android:fontFamily="@font/p_med"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="PENDING"
                    android:layout_marginEnd="35dp"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/p_med"
                    android:background="@color/primary"
                    android:id="@+id/tv_pending"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="ON GOING"
                    android:layout_marginEnd="35dp"
                    android:textColor="@color/primary"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/p_med"
                    android:background="#f1f1f1"
                    android:id="@+id/tv_onGoing"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="COMPLETE"
                    android:textColor="@color/primary"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:fontFamily="@font/p_med"
                    android:background="#f1f1f1"
                    android:id="@+id/tv_complete"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/primary"
                android:layout_margin="15dp"
                android:alpha="0.3"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/rv_record"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>